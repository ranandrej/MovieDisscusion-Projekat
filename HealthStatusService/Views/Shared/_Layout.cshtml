<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SystemPulse</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- System Header -->
    <header class="system-header">
        <nav class="system-nav">
            <div class="nav-container">
                <!-- Logo / Brand -->
                <a class="system-brand" href="/">
                    <i class="fas fa-heartbeat system-icon"></i>
                    <span class="brand-text">SystemPulse</span>
                    <div class="brand-subtitle">Health Monitoring Dashboard</div>
                </a>

                <!-- Status Indicator -->
                <div class="status-indicator">
                    <div class="pulse-dot"></div>
                    <span>System Online</span>
                </div>
            </div>
        </nav>

        <!-- Decorative System Line -->
        <div class="system-line">
            <div class="system-pulse"></div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="system-main">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="system-footer">
        <div class="footer-content">
            <div class="footer-brand">
                <i class="fas fa-heartbeat"></i>
                <span>SystemPulse</span>
            </div>
            <div class="footer-text">
                &copy; @DateTime.Now.Year - Monitoring systems since inception
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("scripts", required: false)

    <style>
        /* System Header Styles */
        .system-header {
            background: linear-gradient(135deg, var(--primary-bg) 0%, var(--secondary-bg) 100%);
            box-shadow: 0 4px 20px var(--shadow-color);
            position: relative;
            z-index: 1000;
        }

        .system-nav {
            padding: 20px 0;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
        }

        .system-brand {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: var(--text-primary);
            transition: all 0.3s ease;
        }

        .system-brand:hover {
            transform: scale(1.05);
            color: var(--accent-gold);
        }

        .system-icon {
            font-size: 2.5rem;
            margin-right: 15px;
            color: var(--accent-red);
            animation: heartbeat 2s ease-in-out infinite;
        }

        @@keyframes heartbeat {
            0%, 50%, 100% { transform: scale(1); }
            25%, 75% { transform: scale(1.1); }
        }

        .brand-text {
            font-family: 'Orbitron', monospace;
            font-size: 2rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--accent-red) 0%, var(--accent-blue) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-subtitle {
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-top: -5px;
            font-weight: 300;
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 20px;
            background: var(--tertiary-bg);
            border-radius: 25px;
            border: 1px solid var(--border-color);
        }

        .pulse-dot {
            width: 12px;
            height: 12px;
            background: var(--accent-blue);
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(0, 212, 255, 0.7);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(0, 212, 255, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(0, 212, 255, 0);
            }
        }

        .status-indicator span {
            color: var(--text-primary);
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* System Line */
        .system-line {
            height: 6px;
            background: var(--accent-blue);
            position: relative;
            overflow: hidden;
        }

        .system-pulse {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg,
                transparent 0%,
                var(--accent-gold) 25%,
                var(--accent-red) 50%,
                var(--accent-blue) 75%,
                transparent 100%);
            animation: systemScan 3s linear infinite;
        }

        @@keyframes systemScan {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        /* Main Content */
        .system-main {
            min-height: calc(100vh - 200px);
            padding: 40px 0;
        }

        .content-wrapper {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 30px;
        }

        /* Footer */
        .system-footer {
            background: var(--primary-bg);
            border-top: 1px solid var(--border-color);
            padding: 30px 0;
            text-align: center;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 30px;
        }

        .footer-brand {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--accent-red);
            margin-bottom: 10px;
        }

        .footer-brand i {
            font-size: 1.5rem;
            animation: heartbeat 2s ease-in-out infinite;
        }

        .footer-text {
            color: var(--text-muted);
            font-style: italic;
        }

        /* Chart Containers */
        .chart-container {
            background: var(--secondary-bg);
            border-radius: 20px;
            padding: 30px;
            margin: 20px 0;
            border: 1px solid var(--border-color);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .chart-title {
            font-family: 'Orbitron', monospace;
            color: var(--accent-gold);
            margin-bottom: 20px;
            font-size: 1.2rem;
            font-weight: 600;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .nav-container {
                flex-direction: column;
                gap: 20px;
            }

            .system-icon {
                font-size: 2rem;
            }

            .brand-text {
                font-size: 1.5rem;
            }

            .status-indicator {
                order: -1;
            }
        }
    </style>
</body>
</html>
